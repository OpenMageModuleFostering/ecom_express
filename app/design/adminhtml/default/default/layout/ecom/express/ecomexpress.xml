            <block type="ecomexpress/adminhtml_awb" name="awb" />
        </reference>
    </adminhtml_adminhtml_awb_index>
    
   <adminhtml_sales_order_shipment_view>
         <reference name="head">
              <action method="addJs"><file>ecom/ecomexpress.js</file><params>async="async"</params></action> 
         </reference> 
