    <adminhtml_adminhtml_pincode_index>
		<update handle="editor"/>
        <reference name="content">
            <block type="ecomexpress/adminhtml_pincode" name="pincode" />
        </reference>
    </adminhtml_adminhtml_pincode_index>
    
    <adminhtml_adminhtml_awb_index>
		<update handle="editor"/>
